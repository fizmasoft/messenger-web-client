{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./build/typings",
    "outDir": "./build",
    "rootDir": "src",
    "baseUrl": "./",
    "importHelpers": true,
    "types": ["node", "reflect-metadata"],
    "paths": {
      "src/*": ["src/*"],
      "tslib": [
        "./node_modules/tslib/tslib.d.ts"
      ]
    },
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/examples/index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "build"]
}
